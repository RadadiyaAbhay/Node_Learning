<%- include('header')%>

    <body>
        <div class="container-scroller">
            <%- include('navbar')%>

                <!-- partial -->
                <div class="container-fluid page-body-wrapper">
                    <!-- partial:partials/_sidebar.html -->
                    <%- include('sidebar')%>

                        <!-- partial -->
                        <div class="main-panel">
                            <div class="content-wrapper">
                                <div class="col-12 grid-margin stretch-card">
                                    <div class="card">
                                        <div class="card-body d-flex flex-wrap">
                                            <% blogs.map((blog)=>{ %>
                                                <div class="p-2 col-4">
                                                    <div class="card col-12 border-3 border border-secondary-subtle ">
                                                        <div class="col-12 rounded overflow-hidden align-items-center d-flex justify-content-center "
                                                            style="height: 200px;">
                                                            <img src="<%= blog.images[0] %>" class="card-img-top"
                                                                alt="...">
                                                        </div>
                                                        <div class="card-body p-4"
                                                            style="background-color:rgb(242,237,243);">
                                                            <h5 class="card-title text-truncate mb-1">
                                                                <%= blog.title %>
                                                            </h5>
                                                            <p class="card-text text-break text-truncate"><%= blog.description%></p>
                                                            <div class="d-flex  justify-content-center align-items-center ">
                                                                <div class="col-2">
                                                                    <img src="https://cdn-icons-png.flaticon.com/512/149/149071.png" style="width: 35px;" alt="">
                                                                </div>
                                                                <div class="col-10">
                                                                    <p class="mb-1 text-break text-truncate"><%= blog.author%></p>
                                                                    <p class="mb-0 text-break text-truncate"><%= blog.createdAt%></p>
                                                                </div>
                                                            </div>
                                                            
                                                        </div>
                                                    </div>
                                                </div>
                                                <%})%>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <%- include('footer')%>